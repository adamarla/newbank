    <tex>%text

%
\begin{align}

\frac{\sqrt{x}}{\sqrt{\ea} - 2} &amp;= \frac{\sqrt{x}}{\sqrt{\ea} - 2}\cdot \frac{\sqrt{\ea}+2}{\sqrt{\ea} + 2} \\
&amp;= \frac{\sqrt{x}\cdot \left(\sqrt{\ea} + 2 \right)}{\ea - 4} \\
&amp;= \sqrt{\ea} + 2
\end{align}
%text
 And hence
\[\lim_{x\to 0} \frac{\sqrt{x}}{\sqrt{\ea} - 2} = \lim_{x\to 0} \left(\sqrt{\ea} + 2\right) = 4 \]
%
</tex>
